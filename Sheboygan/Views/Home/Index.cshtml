@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MapGuide ASP.net MVC Example</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/taskpane.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-theme.min.css")" />
</head>
<body>
    <div class="jumbotron">
        <div class="container">
            <h1>MapGuide ASP.net MVC Example</h1>
            <p>This is a sample MapGuide application built on ASP.net MVC using the Sheboygan Sample data set</p>
            <p>Before running the sample application. Make sure that: </p>
            <ol>
                <li>You have loaded the Sheboygan Sample data set using the MapGuide Site Administrator</li>
                <li>You have loaded the sample resources required by this application</li>
            </ol>
        </div>
    </div>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class="col-md-6">
                <h2>AJAX Viewer</h2>
                <p>Launch this sample application using the AJAX Viewer</p>
                <p><a class="btn btn-default" href="/mapguide/mapviewerajax/?WEBLAYOUT=Library://Samples/Sheboygan/Layouts/SheboyganAspMvc.WebLayout&USERNAME=Anonymous" role="button">Run &raquo;</a></p>
            </div>
            <div class="col-md-6">
                <h2>Fusion</h2>
                <p>Launch this sample application using the Fusion Viewer</p>
                <p><a class="btn btn-default" href="/mapguide/fusion/templates/mapguide/slate/index.html?ApplicationDefinition=Library://Samples/Sheboygan/FlexibleLayouts/SheboyganAspMvc.ApplicationDefinition" role="button">Run &raquo;</a></p>
            </div>
        </div>
    </div> <!-- /container -->
</body>
</html>
